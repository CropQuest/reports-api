%div.col-md-12
  %h2 Report
  %hr

  %p
    %b Report type:
    = @report.report_type.name
  %p
    %b Report Type Options:
    = @report&.report_type_options&.map(&:name).join(', ')
  %p
    %b Name:
    = @report.name
  %p
    %b Start Date:
    = @report.start_date
  %p
    %b End Date:
    = @report.end_date
  %p
    %b Notes:
    = @report.notes
  %p
    %b Logo Enabled:
    = @report.logo_enabled
  %p
    %b Created At:
    = @report.created_at
  %p
    %b Updated At:
    = @report.updated_at

  = link_to 'Edit', edit_report_path(@report)
  \|
  = link_to 'Back', reports_path
