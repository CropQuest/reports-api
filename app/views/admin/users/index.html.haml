%div.col-md-12
  %h3 Users
  %br

  %table.table.table-striped.table-responsive
    %thead.thead-default
      %tr
        %th Email
        %th Admin?
        %th Reports
        %th Last Login
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= (user.report_admin? ? icon('check') : icon('close'))
          %td= user.reports.count
          %td= user.current_sign_in_at
          %td
            = link_to raw("#{icon('eye')}"), admin_user_path(user), class: "btn btn-info"
            = link_to raw("#{icon('pencil')}"), edit_admin_user_path(user), class: "btn btn-warning"
            = link_to raw("#{icon('trash')}"), admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
