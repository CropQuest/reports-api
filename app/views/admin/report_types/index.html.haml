%div.col-md-12
  %h2 Report Types
  %hr

  %table.table.table-striped
    %thead.thead-inverse
      %tr
        %th Name
        %th Description
        %th

    %tbody
      - @report_types.each do |report_type|
        %tr
          %td= report_type.name
          %td= report_type.description
          %td
            = link_to 'Show', admin_report_type_path(report_type)
            = link_to 'Edit', edit_admin_report_type_path(report_type)
            = link_to 'Destroy', admin_report_type_path(report_type), method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Report type', new_admin_report_type_path
